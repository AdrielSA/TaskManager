@model TaskManager.Web.Models.TaskViewModel

@{
    ViewData["Title"] = "Nueva Tarea";
}

<div class="row mt-5">
    <div class="col-md-6">
        <h2>Nueva Tarea</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-controller="Task" asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</div>
<div class="mt-5">
    <form asp-controller="Task" asp-action="Create" method="post">
        <partial name="_TaskForm" model="Model" />
        <div class="mt-5">
            <button type="submit" class="btn btn-primary">Agregar</button>
        </div>
    </form>
</div>
