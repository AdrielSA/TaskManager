@model TaskManager.Web.Models.TaskViewModel

<div class="row mb-3">
    <label for="Description" class="col-sm-1 col-form-label">Descripción:</label>
    <div class="col-sm-10">
        <input asp-for="Description" type="text" class="form-control" required>
    </div>
</div>
<div class="row mb-3">
    <label for="Status" class="col-sm-1 col-form-label">Estado:</label>
    <div class="col-sm-10">
        <select asp-for="Status" class="form-select" aria-label="Status" required>
            @if (Model?.Id is not null)
            {
                <option value="@Status.Completed">@Status.Completed</option>
            }
            else
            {
                <option selected disabled>Seleccionar estado</option>
                <option value="@Status.Completed" disabled>@Status.Completed</option>
            }
            <option value="@Status.InProgress">@Status.InProgress</option>
            <option value="@Status.Paused">@Status.Paused</option>
        </select>
    </div>
</div>
<div class="row mb-3">
    <label for="Priority" class="col-sm-1 col-form-label">Prioridad:</label>
    <div class="col-sm-10">
        <input asp-for="Priority" type="number" class="form-control" required>
    </div>
</div>